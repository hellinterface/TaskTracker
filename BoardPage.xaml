<Page x:Class="TaskTracker.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskTracker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BoardPage" Background="AliceBlue">
    <Grid Margin="8,8,8,8">
        <Border Background="#ffccccff" BorderThickness="0" CornerRadius="3" VerticalAlignment="Top" Height="36" Padding="6">
            <Grid>
                <StackPanel x:Name="ToolBarStackPanel" Orientation="Horizontal">
                    <Button Style="{StaticResource ButtonStyle_Main}" Margin="0,0,6,0" Click="Button_Click"></Button>
                    <TextBox Style="{StaticResource TextBoxStyle_BoardTitle}" Margin="0,0,6,0" Width="240">Board title</TextBox>
                </StackPanel>
            </Grid>
        </Border>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" Margin="0,41,0,0" Grid.ColumnSpan="2">
            <StackPanel x:Name="MainHorizontalStackPanel" Orientation="Horizontal">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
